---
import { undefined } from 'astro:schema';


interface Props{
    href: string | URL;
    variant: "blank" | "primary" | "outlined";
    fullWidth?: boolean;
}

const { href, variant, fullWidth = false } = Astro.props as Props;

const isFullWidth = fullWidth ? "100%" : "fit-content";
---

<a class=`link ${variant}` href={href}>
    <slot/>
</a>

<style define:vars={{isFullWidth}}>
    .link{
        text-decoration: none;
        cursor: pointer;
        padding: 10px 20px;
        border-radius: 10px;
        font-weight: 700;
        font-size: 14pt;
        border: none;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 5px;
        min-width: 80px;
        
        width: var(--isFullWidth);
    }

    .primary{ /* dark */
        color: var(--light);
        background-color: var(--dark);
        box-shadow: 0px 5px 5px rgba(12, 12, 12, 0.33);
    }

    .outlined{
        color: var(--primary);
        background-color: transparent;
        border: 2px solid var(--primary);
    }
 
    .blank{
        color: var(--dark);
    }
</style>