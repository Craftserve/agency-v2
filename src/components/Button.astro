---
interface Props{
    id: string;
    fontSize?: string;
    variant: "primary" | "secondary" | "outlined";
}

const { id, variant, fontSize = "1em" } = Astro.props as Props;

const variantClassMap: Record<string, string> = {
    primary: "dark",
    secondary: "light",
}

const buttonClass = variantClassMap[variant] ?? "outlined";

---
<button type="button" id={id} class={`button ${buttonClass}`}>
    <slot/>
</button>

<style define:vars={{fontSize}}>
    .dark{
        color: white;
        background-color: #0C0C0C;
        box-shadow: 0px 5px 5px rgba(12, 12, 12, 1);
    }

    .light{
        color: rgba(12, 12, 12, 1);
        background-color: var(--secondary);
    }

    .outlined{
        color: var(--primary);
        background-color: transparent;
        border: 2px solid var(--primary) !important;
    }

    .button{
        border-radius: 10px;
        border: none;
        padding: 15px 30px;
        cursor: pointer;
        font-weight: 700;

        font-size: var(--fontSize);
    }
</style>