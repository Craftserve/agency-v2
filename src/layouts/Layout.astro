---
import '../../src/global.css'
import Footer from '../sections/Footer.astro'
import Navbar from '../sections/Navbar.astro'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Caveat:wght@400..700&family=Dokdo&family=Orbitron:wght@400..900&family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap"
            rel="stylesheet"
        />
		<title>Vitresoft</title>
	</head>
	<body>
		<div class="container">
			<Navbar />
			<slot />
			<Footer />
		</div>
		<script>
			import { getLangForRedirect } from "../i18n/utils";
			const lang = getLangForRedirect(new URL(window.location.href));

			const userLang = navigator.language || "pl";

			if (!userLang.startsWith("pl") && lang !== "en") {
				const meta = document.createElement("meta");
				meta.httpEquiv = "refresh";
				meta.content = "0;url=/en/";
				document.head.appendChild(meta);
			}
		</script>
	</body>
</html>

<style>
	.container {
		width: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		font-family: var(--font-ubuntu);
	}
</style>
