---
import { Image } from "astro:assets";
import LogoDark from "../assets/LogoDark.svg"
import { getLangFromUrl, getRoutes, useTranslations } from "../i18n/utils";
import Link from "../components/Link.astro";
import { Icon } from "astro-icon/components";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const routes = getRoutes(Astro.url);
---

<nav class="nav">
    <div class="wrapper">
        <button class="logoContainer">
            <Image src={LogoDark} alt="Logo" width={40} height={40}/>
            <span style="font-weight: 700;">Vitresoft</span>
        </button>
    

        <div class="hamburger-menu">
            {routes.map((route) => {
                return <Link variant="blank" href={route.url}>{route.name}</Link>
            })}
            <button class="languageSection">
                <span style="font-weight: 700;">{t("language")}</span>
                <Icon name="uil:globe" width={25} height={25} />
            </button>
        </div>
        <button type="button" class="hamburger-button">
            <Icon class="hamburger-icon" name="tabler:menu-2" />
        </button>
    </div>
</nav>

<script src="../scripts/NavbarScripts.js"></script>
<style>
    .nav{
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .wrapper{
        width: 100%;
        height: 100%;
        padding: 15px 10px 5px;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .languageSection{
        display: flex;
        align-items: center;
        gap: 5px;
        background-color: transparent;
        border: none;
        cursor: pointer;
        border: 2px solid var(--primary);
        color: var(--primary);
        border-radius: 8px;
        padding: 5px 14px;
    }

    .logoContainer{
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 10px;
        background-color: transparent;
        border: none;
        cursor: pointer;
        font-family: var(--font-ubuntu);
    }
  

    .hamburger-menu{
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 20px;
    }
    
    .hamburger-icon {
        font-size: 30px;
    }

    .hamburger-button {
        display: none;
        padding: 5px;
        border: 0;
        border-radius: 10px;
        background-color: transparent;
        transition: ease-in-out .8s;
    }

    .hamburger-button:hover {
        background-color: var(--secondaryLight);
        transition: backgroundColor ease .7s;
    }

    @media only screen and (max-width: 768px){
        .hamburger-button {
            display: block;
        }

        .hamburger-menu{
            background-color: var(--secondaryLight);
            width: 100%;
            position: fixed;
            top: 66px;
            right: 0;
            origin: top;
            overflow: hidden;
            max-height: 0px;
            transition: .6s;
            flex-direction: column;
            gap: 5px;
            z-index: 500;
        }
    }

    .hamburger-menu-open {
        max-height: 999px;
    }
</style>